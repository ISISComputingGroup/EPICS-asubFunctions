#
# write a char array with   CAPUT -S WFSPLITCHAR "value1;value2"
# then read it back with    CAGET WFCSPLIT.VALA
#

record(waveform, "$(P)WFSPLITCHAR") 
{
  field(FTVL, "CHAR") 
  field(NELM, "400")
  field(FLNK, "$(P)WFCSPLIT")
}

record(stringin, "$(P)WFSPLITSEP") 
{
  field(VAL, ";")
}

# INPC is the mode, 1=split of separator in INPD, 2=split on length in INPE (not used below)
record(aSub, "$(P)WFCSPLIT")
{
  field(SNAM, "splitCharWaveform")
  field(INPA, "$(P)WFSPLITCHAR")
  field(FTA, "CHAR")
  field(NOA, "400")
  field(INPB, "$(P)WFSPLITCHAR.NORD")
  field(FTB, "ULONG")
  field(INPC, "1")
  field(FTC, "ULONG")
  field(INPD, "$(P)WFSPLITSEP")
  field(FTD, "STRING")
  field(FTE, "ULONG")
  field(FTVA, "STRING")
  field(FTVB, "STRING")
  field(FTVC, "STRING")
  field(FTVU, "ULONG")
} 
 
 